{
  "name": "@lokutor/sdk",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript SDK for Lokutor Real-time Voice AI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "voice",
    "ai",
    "tts",
    "stt",
    "streaming",
    "websocket",
    "real-time"
  ],
  "author": "Lokutor AI",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.1"
  }
}
